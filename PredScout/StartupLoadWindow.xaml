<Window x:Class="PredScout.StartupLoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PredScout"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="PredScout - Loading" Height="300" Width="600"
                Background="#333333" Foreground="{StaticResource ForegroundBrush}" Icon="/binoculars.ico">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Connecting to PredScout servers..." FontSize="18" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="300" Height="20" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
