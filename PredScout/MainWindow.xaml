<Window x:Class="PredScout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PredScout - Player Info" Height="675" Width="1350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListView x:Name="Team0ListView" Grid.Column="0" Margin="10" 
                  ItemsSource="{Binding Team0Players}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Player Name" DisplayMemberBinding="{Binding PlayerName}" Width="100" />
                    <GridViewColumn Header="Hero" DisplayMemberBinding="{Binding Hero}" Width="100" />
                    <GridViewColumn Header="Role" DisplayMemberBinding="{Binding TeamRole}" Width="100" />
                    <GridViewColumn Header="MMR" DisplayMemberBinding="{Binding MMR}" Width="50" />
                    <GridViewColumn Header="Role Winrate" DisplayMemberBinding="{Binding RoleWinrate}" Width="100" />
                    <GridViewColumn Header="Overall Winrate" DisplayMemberBinding="{Binding OverallWinrate}" Width="100" />
                    <GridViewColumn Header="Hero Winrate" DisplayMemberBinding="{Binding HeroWinrate}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="Team1ListView" Grid.Column="1" Margin="10"
                  ItemsSource="{Binding Team1Players}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Player Name" DisplayMemberBinding="{Binding PlayerName}" Width="100" />
                    <GridViewColumn Header="Hero" DisplayMemberBinding="{Binding Hero}" Width="100" />
                    <GridViewColumn Header="Role" DisplayMemberBinding="{Binding TeamRole}" Width="100" />
                    <GridViewColumn Header="MMR" DisplayMemberBinding="{Binding MMR}" Width="50" />
                    <GridViewColumn Header="Role Winrate" DisplayMemberBinding="{Binding RoleWinrate}" Width="100" />
                    <GridViewColumn Header="Overall Winrate" DisplayMemberBinding="{Binding OverallWinrate}" Width="100" />
                    <GridViewColumn Header="Hero Winrate" DisplayMemberBinding="{Binding HeroWinrate}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>

